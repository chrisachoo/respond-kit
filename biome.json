{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"vcs": {
		"enabled": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/dist", "!**/.vscode", "!**/.source"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "info"
			},
			"style": {
				"useSelfClosingElements": "error",
				"useSingleVarDeclarator": "error",
				"noUnusedTemplateLiteral": "error",
				"noInferrableTypes": "error",
				"noUselessElse": "error",
				"useDefaultParameterLast": "error",
				"useAsConstAssertion": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingCommas": "es5",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"attributePosition": "auto",
			"quoteProperties": "asNeeded"
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "tab"
		}
	}
}
