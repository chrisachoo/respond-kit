{
	"name": "respond-kit",
	"version": "1.0.1",
	"description": "Tiny, type-safe HTTP response helpers for modern runtimes (Bun, Cloudflare, Deno, Node).",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./headers": {
			"types": "./dist/headers/index.d.ts",
			"default": "./dist/headers/index.js"
		},
		"./http/*": {
			"types": "./dist/http/*.d.ts",
			"default": "./dist/http/*.js"
		},
		"./headers/*": {
			"types": "./dist/headers/*.d.ts",
			"default": "./dist/headers/*.js"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"sideEffects": false,
	"scripts": {
		"build": "tsdown",
		"build:prod": "NODE_ENV=production tsdown",
		"prepublishOnly": "bun run build:prod",
		"check": "biome check --write .",
		"format": "biome format --write",
		"prepare": "husky",
		"test": "bun test"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.4",
		"tsdown": "^0.15.8"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"**/*.{js,mjs,cjs,ts,mts,cts}": "biome check --write"
	},
	"keywords": [
		"http",
		"response",
		"json",
		"text",
		"error",
		"bun",
		"hono",
		"cloudflare",
		"utility"
	],
	"author": {
		"name": "chrisachoo",
		"url": "https://github.com/chrisachoo"
	},
	"contributors": [
		{
			"name": "chrisachoo",
			"url": "https://github.com/chrisachoo"
		}
	],
	"maintainers": [
		{
			"name": "chrisachoo",
			"url": "https://github.com/chrisachoo"
		}
	],
	"license": "MIT"
}